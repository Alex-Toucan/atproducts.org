---
const { title, id, parent, additionalClasses, bodyVisible } = Astro.props;
---

<div class={`accordion-item ${additionalClasses}`}>
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target={`#${id}`} aria-expanded="false" aria-controls={id}>
      {title}
    </button>
  </h2>
  <div id={id} class={`accordion-collapse collapse ${bodyVisible !== 'none' ? 'show' : ''}`} data-bs-parent={`#${parent}`}>
    {% if bodyVisible !== 'none' %}
      <div class="accordion-body">
    {% endif %}
      <slot name="accordion-item-content" />
    {% if bodyVisible !== 'none' %}
      </div>
    {% endif %}
  </div>
</div>
