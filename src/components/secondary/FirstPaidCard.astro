const { title, price, secondaryprice, description, btnhref, btntext, footertext } = Astro.props;

function createMarkup(html) {
  return { __html: html };
}

<>
  <div className="card h-md-100 rounded-3 shadow-sm">
    <div className="card-header py-3">
      <h3 className="my-0 fw-normal">{title}</h3>
    </div>
    <div className="card-body">
      <h1 className="card-title pricing-card-title" dangerouslySetInnerHTML={createMarkup(price)}></h1>
      {secondaryprice && (
        <p className="mt-2 text-body-secondary fw-light fs-5" dangerouslySetInnerHTML={createMarkup(secondaryprice)}></p>
      )}
      <p className="list-unstyled mt-3 mb-4">{description}</p>
      <a className="tab-link w-100 btn btn-lg btn-primary" href={btnhref}>{btntext}</a>
    </div>
    <div className="card-footer text-body-secondary" dangerouslySetInnerHTML={createMarkup(footertext)}></div>
  </div>
</>
