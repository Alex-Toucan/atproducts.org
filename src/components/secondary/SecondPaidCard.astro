---
const { title, description, btnhref, btntext, footertext } = Astro.props;
---

<div class="card shadow-sm col-12">
  <div>
    <div class="d-md-flex">
      <div class="col-md-4 custom-card-header">
        <h3 class="m-1 fw-normal">{title}</h3>
        <hr class="custom-hr">
        <p class="pb-1 mb-0 mt-1 vertical-align">{description}</p>
        {btnhref && btntext && (
            <a type="button" class="mt-3 mb-2 w-100 btn btn-primary" href={btnhref}>{btntext}</a>
        )}
      </div>
      <div class="col-md-8 p-1 py-2 mb-0">
        <slot name="paid-card-content" />
      </div>
    </div>
    {footertext && (
        <div class="card-footer text-body-secondary">* These are not guaranteed prices.</div>
    )}
  </div>
</div>
