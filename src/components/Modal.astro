---
const { id, title } = Astro.props;
---

<button class="btn btn-dl btn-resource" type="button" data-bs-toggle="modal" data-bs-target={`#${id}`}>
  {title}
</button>
<div class="modal fade" id={id} data-bs-keyboard="false" tabindex="-1" aria-labelledby={`${id}-title`} aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id={`${id}-title`}>
          {title}
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h2>{title}</h2>
        <slot name="modal-content" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
