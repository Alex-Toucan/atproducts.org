  <body class="h-100">

  <div class="position-fixed bottom-0 end-0 mb-3 me-3">
    <button class="btn btn-secondary py-2 d-flex align-items-center" id="bd-audio" type="button" aria-expanded="false">
      <span class="audio-icon-active">
        <i class="my-1"></i>
      </span>
      <span class="visually-hidden" id="bd-audio-text">Toggle audio</span>
    </button>
  </div>

    <script>
      (() => {
      'use strict';
    
      const playAudio = () => {
        const audio = new Audio('sound.mp3');
        audio.play();
      };
    
      const toggleAudio = () => {
        const icon = document.querySelector('.audio-icon-active i');
        icon.classList.toggle('bi-volume-up-fill');
        icon.classList.toggle('bi-volume-mute-fill');
        const isMuted = icon.classList.contains('bi-volume-mute-fill');
        if (isMuted) {
          // Pause the audio
          // (You should handle audio playback logic accordingly)
        } else {
          // Play the audio
          playAudio();
        }
      };
    
      window.addEventListener('load', () => {
        const audioButton = document.getElementById('bd-audio');
        audioButton.addEventListener('click', () => {
          toggleAudio();
        });
      });
    })();
    </script>
  </body>
